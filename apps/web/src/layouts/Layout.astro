---
import TheFooter from "../components/sections/TheFooter.astro";
import TheNav from "../components/sections/TheNav.astro";
import type { ColorName } from "../types/colors.types";

export interface Props {
  title: string;
  bg: ColorName;
  text: ColorName;
}

const { title, bg, text } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class={`bg-${bg}-100 text-${text}-900 h-screen w-screen`}>
      <TheNav bg={text} />
      <slot name="header" />
    </header>
    <main class="w-screen">
      <slot />
    </main>
    <TheFooter bg={bg} text={text} />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  body {
    padding: 0;
    margin: 0;
    max-width: 100vw;
    overflow-x: hidden;
  }
</style>
