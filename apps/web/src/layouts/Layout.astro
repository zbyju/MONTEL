---
import TheNav from "../components/sections/TheNav.astro";

export interface Props {
  title: string;
  bg: string;
  color: string;
}

const { title, bg, color } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class={`${bg} ${color} h-screen w-screen`}>
      <TheNav />
      <slot name="header" />
    </header>
    <main class="w-screen">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  body {
    padding: 0;
    margin: 0;
    max-width: 100vw;
    overflow-x: hidden;
  }
</style>
