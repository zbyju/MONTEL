---
import TheNav from "../components/sections/TheNav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <TheNav />
    <slot />
  </body>
</html>

<style is:global>
  body {
    padding: 0;
    margin: 0;
    max-width: 100vw;
    overflow-x: hidden;
  }
</style>
