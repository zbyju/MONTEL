---
import type { ColorName } from "../../types/colors.types";
import MONTEL from "../MONTEL.astro";

interface Props {
  bg: ColorName;
  text: ColorName;
}

const { bg, text } = Astro.props;

const alsoLookAtClass = "ml-4 underline hover:brightness-200";
---

<footer class={`bg-${text}-900 text-${text}-100 shadow-md`}>
  <div class="px-20 pb-10 w-full flex flex-wrap justify-start">
    <MONTEL color={`text-${text}-100`} className="self-center mt-12 mr-40" />
    <div class="flex flex-wrap flex-grow">
      <div class="mt-12 mr-20 flex-grow">
        <p>Kontakt:</p>
        <p>email@email.cz</p>
        <p>+420 123 456 789</p>
      </div>
      <div class="mt-12 mr-20 flex-grow">
        <p>Adresa:</p>
        <p>Vicenice u nameste nad oslavou</p>
        <p>Namest nad Oslavou</p>
        <p>67571</p>
      </div>
      <div class="mt-12 flex-grow">
        <p>Podivejte se take:</p>
        <ul class="list-disc">
          <li class={alsoLookAtClass}><a href="/babybox">Babybox</a></li>
          <li class={alsoLookAtClass}><a href="/babybox">Kamery</a></li>
          <li class={alsoLookAtClass}><a href="/babybox">O nas</a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>
