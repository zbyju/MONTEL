---
import MONTEL from "../MONTEL.astro";

interface Props {
  bg: string;
  text: string;
}

const { bg, text } = Astro.props;

const alsoLookAtClass = "ml-4 underline hover:brightness-200";
---

<footer class={`bg-${text}-900 text-${text}-100 mt-10 shadow-md`}>
  <div class="p-10 pt-40 -mt-32 w-full flex flex-wrap justify-start gap-20">
    <MONTEL color={`text-${text}-100`} />
    <div class="flex gap-40 flex-grow">
      <div>
        <p>Kontakt:</p>
        <p>email@email.cz</p>
        <p>+420 123 456 789</p>
      </div>
      <div>
        <p>Adresa:</p>
        <p>Vicenice u nameste nad oslavou</p>
        <p>Namest nad Oslavou</p>
        <p>67571</p>
      </div>
      <div>
        <p>Podivejte se take:</p>
        <li class={alsoLookAtClass}><a href="/babybox">Babybox</a></li>
        <li class={alsoLookAtClass}><a href="/babybox">Kamery</a></li>
        <li class={alsoLookAtClass}><a href="/babybox">O nas</a></li>
      </div>
    </div>
  </div>
</footer>
