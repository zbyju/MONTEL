---
import type { ColorName } from "../../types/colors.types";
import {
  darkColorBg,
  darkColorText,
  lightColorBg,
  lightColorText,
} from "../../utils/colors";

interface Props {
  heading: string;
  color: ColorName;
  dark?: boolean;
}
const { heading, color, dark = false } = Astro.props;
const bg = dark ? darkColorBg(color) : lightColorBg(color);
const text = dark ? lightColorText(color) : darkColorText(color);
---

<div class={`${bg} ${text} `}>
  <div class="w-11/12 mx-auto py-8">
    <h4
      class="font-bold text-6xl text-center mb-3 w-5/6 md:w-3/5 xl:w-1/2 m-auto"
    >
      {heading}
    </h4>
    <slot />
  </div>
</div>
