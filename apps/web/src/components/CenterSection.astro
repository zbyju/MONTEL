---
import type { Color } from "../types/colors.types";
import { darkColorBg, darkColorText, lightColorBg } from "../utils/colors";

interface Props {
  heading: string;
  color: Color;
}
const { heading, color } = Astro.props;
const bg = lightColorBg(color);
const text = darkColorText(color);
---

<div class={`${bg} ${text}`}>
  <div class="p-10">
    <h4 class="font-bold text-6xl text-center mb-3">{heading}</h4>
    <slot />
  </div>
</div>
