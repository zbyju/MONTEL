---
interface Props {
  src: string;
  alt: string;
  className?: string;
  imageClassName?: string;
  style?: string;
}
const {
  src,
  alt,
  className = "",
  imageClassName = "",
  style = "",
} = Astro.props;
---

<div class={className} style={style}>
  <img
    src={src}
    alt={alt}
    class={`${imageClassName} rounded-lg shadow-md hover:shadow-lg transition-all duration-500`}
  />
</div>
