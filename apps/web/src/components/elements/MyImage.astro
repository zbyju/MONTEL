---
import type { ElementInfo, ImageElInfo } from "../../types/element.types";

interface Props extends ElementInfo {
  image: ImageElInfo;
}

const { image, className, style } = Astro.props;

const shadowStyle =
  image.noShadow === true
    ? "shadow-none hover:shadow-none"
    : "shadow-md hover:shadow-lg";
---

{
  image.wrap === false ? (
    <img
      src={image.image.src}
      width="auto"
      height="auto"
      alt={image.alt}
      class={`${shadowStyle} transition-all duration-500 ${image.className}`}
    />
  ) : (
    <div class={className} style={style}>
      <img
        src={image.image.src}
        width="auto"
        height="auto"
        alt={image.alt}
        class={`${image.className} rounded-lg ${shadowStyle} transition-all duration-500`}
      />
    </div>
  )
}
