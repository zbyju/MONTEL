---
import type { ColorName } from "../../types/colors.types";
import type { ElementInfo } from "../../types/element.types";
import { colorWeighted, hoverColor } from "../../utils/colors";

interface Props extends ElementInfo {
  email: string;
  color: ColorName;
  light?: boolean;
}

const { email, color, light = false, className = "" } = Astro.props;

const textColor = light ? colorWeighted(color, 400) : colorWeighted(color, 600);
const textColorHover = hoverColor(textColor);
---

<a
  href={`mailto:${email}`}
  class={`${className} text-${textColor} hover:text-${textColorHover} transition-all duration-300 ease-in-out`}
>
  {email}
</a>
