---
import Layout from "../layouts/Layout.astro";
import babyboxImage from "../images/1280x720.svg";
import BigSection from "../components/sections/BigSection.astro";

const bg = "indigo";
const text = "indigo";
---

<Layout title="MONTEL" bg={bg} text={text}>
  <BigSection
    slot="header"
    color={bg}
    heading="Na cestách již léta: Podívejte se na naši dlouhou tradici v nákladní dopravě."
    image={{ image: babyboxImage, alt: "placeholder" }}
  />
</Layout>

<style>
  .word-wider {
    word-spacing: 5px;
  }
</style>
